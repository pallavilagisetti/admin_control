# Unified Environment Configuration
# This file contains all environment variables for the Upstar Backend
# Copy this file and update the values according to your setup

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION (resume_db only)
# =============================================================================
DB_HOST=54.254.3.87
DB_PORT=5433
DB_NAME=resume_db
DB_USER=developer
DB_PASSWORD=localpass

# Database Connection Pool Settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_SSL=false

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Auth0 Configuration (if using Auth0)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=your-api-identifier
AUTH0_CLIENT_SECRET=your-client-secret

# Security Settings
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_key_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_32_chars_long_change_this

# =============================================================================
# CORS & FRONTEND CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
FRONTEND_URL=http://localhost:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# =============================================================================
# AWS S3 CONFIGURATION (if using S3 for file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# Background processing (no Redis needed)

# =============================================================================
# EMAIL CONFIGURATION (if using email service)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# AI/OPENAI CONFIGURATION (if using AI features)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key
AI_CONFIDENCE_THRESHOLD=0.85
AI_MAX_PROCESSING_TIME=300000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# =============================================================================
# HEALTH CHECK & MONITORING
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
METRICS_COLLECTION_INTERVAL=60000
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# BACKGROUND JOBS CONFIGURATION
# =============================================================================
JOB_CONCURRENCY=5

# =============================================================================
# BACKUP CONFIGURATION (if using automated backups)
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' to enable debug mode
DEBUG=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment
# NODE_ENV=production
# PORT=5000
# DB_HOST=your-production-db-host
# DB_PORT=5432
# DB_USER=your-production-db-user
# DB_PASSWORD=your-secure-production-password
# CORS_ORIGIN=https://your-domain.com
# JWT_SECRET=your-super-secure-jwt-secret-for-production
# SESSION_SECRET=your-super-secure-session-secret-for-production
# ENCRYPTION_KEY=your-super-secure-encryption-key-for-production
# LOG_LEVEL=warn
# ENABLE_METRICS=true
# BACKUP_ENABLED=true
